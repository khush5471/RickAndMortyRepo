<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="20dp"
    card_view:contentPadding="0dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingStart="10dp"
            android:text="@string/name"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtlocationName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:text="Hello"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            card_view:layout_constraintBottom_toBottomOf="@id/txtName"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/txtName"
            card_view:layout_constraintTop_toTopOf="@id/txtName" />

        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/txtName" />

        <TextView
            android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingStart="10dp"
            android:text="@string/type"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/view1" />

        <TextView
            android:id="@+id/txtlocationType"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:text="Hello"
            android:textColor="@color/red"
            android:textStyle="bold|italic"
            card_view:layout_constraintBottom_toBottomOf="@id/txtType"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/txtType"
            card_view:layout_constraintTop_toTopOf="@id/txtType" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/txtType" />

        <TextView
            android:id="@+id/txtDimension"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:gravity="start"
            android:maxLines="1"
            android:padding="8dp"
            android:paddingStart="10dp"
            android:text="@string/dimension"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/view2" />

        <TextView
            android:id="@+id/txtlocationDimension"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:text="Hello"
            android:textColor="@color/green"
            android:textStyle="bold|italic"
            card_view:layout_constraintBottom_toBottomOf="@id/txtDimension"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/txtDimension"
            card_view:layout_constraintTop_toTopOf="@id/txtDimension" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
